{
  "name": "dway-financial-freedom-platform",
  "version": "1.0.0",
  "description": "Revolutionary financial platform bridging traditional banking and DeFi",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t dway-platform .",
    "docker:run": "docker run -p 3000:3000 dway-platform",
    "github:setup": "chmod +x scripts/setup-github-mcp.sh && ./scripts/setup-github-mcp.sh",
    "github:test": "node scripts/github-automation.js test",
    "mcp:restart": "pkill -f mcp-server; npm run mcp:start",
    "mcp:start": "node -e \"console.log('Starting MCP servers...'); process.exit(0);\"",
    "git:sync": "git pull origin main && git push origin main",
    "git:force-sync": "git pull origin main --allow-unrelated-histories && git push origin main --force-with-lease",
    "release:prepare": "npm run build && npm run test && npm run lint",
    "release:create": "node scripts/create-release.js",
    "github:repo": "node scripts/github-automation.js repo",
    "github:commit": "node scripts/github-automation.js commit",
    "github:issue": "node scripts/github-automation.js issue",
    "github:status": "git status && npm run github:test"
  },
  "dependencies": {
    "@formance/formance-sdk": "^4.3.0",
    "@hookform/resolvers": "^5.1.1",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "clsx": "^2.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "inversify": "^6.0.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.525.0",
    "pg": "^8.11.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.60.0",
    "redis": "^4.6.10",
    "reflect-metadata": "^0.2.2",
    "tailwind-merge": "^2.3.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.1",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.7",
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "fintech",
    "blockchain",
    "banking",
    "defi",
    "financial-platform",
    "formance",
    "typescript",
    "clean-architecture"
  ],
  "author": "DWAY Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
